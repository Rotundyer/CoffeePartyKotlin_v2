<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".getting.GettingFragment"
    android:gravity="center|top"
    android:orientation="vertical"
    android:background="@color/Brown_900">

    <TextView
        android:id="@+id/getting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hello"
        android:textSize="30dp"
        android:textColor="@color/Brown_200"
        android:fontFamily="@font/open_sans_extrabold"/>

    <ImageView
        android:id="@+id/getting_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_light_zero"/>

    <TextView
        android:id="@+id/getting_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/Brown_200"
        android:fontFamily="@font/open_sans_semibold"/>

    <TextView
        android:id="@+id/getting_sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/Brown_200"
        android:fontFamily="@font/open_sans_semibold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/getting_next"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_light"
            android:text="Выпить"
            android:textSize="30dp"
            android:fontFamily="@font/open_sans_extrabold"
            android:textColor="@color/Brown_900"/>
    </LinearLayout>

</LinearLayout>